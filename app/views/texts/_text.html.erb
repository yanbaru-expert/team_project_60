<div class="col-12 col-md-6 col-lg-4">
  <div class="card content-card border-dark mb-3">
  <%= link_to text_path(text.id) do %>
    <div class="text_img"><img src="/assets/no_image.jpg" alt="Ruby/Rails テキスト教材"></div>
      <div class="card-body">
      <p>
        <% if text.read_progressed_by?(current_user) %>
          <%= link_to text_read_progresses_path(text), method: :delete do %>
          <button class="btn btn-primary btn-block">修得済みを解除</button>
          <% end %>
        <% else %> 
          <%= link_to text_read_progresses_path(text), method: :post do %>
          <button class="btn btn-secondary btn-block">読破済みにする</button>
          <% end %>
        <% end %>
      </p>    
        <p class="card-text mt-3"><%= text.title %></p>
        <p>【<%= text.genre_i18n %>】</p>
    </div>
  <% end %>
  </div>
</div>
